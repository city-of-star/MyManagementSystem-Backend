        <dependencies>

            <!-- Base模块内部依赖管理 -->
            <dependency>
                <groupId>com.mms</groupId>
                <artifactId>mms-base-bc-common</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>com.mms</groupId>
                <artifactId>mms-base-bc-service</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>com.mms</groupId>
                <artifactId>mms-base-bc-controller</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>com.mms</groupId>
                <artifactId>mms-base-bc-feign-api</artifactId>
                <version>${project.version}</version>
            </dependency>

            <!-- Feign模块依赖管理 -->
            <dependency>
                <groupId>com.mms</groupId>
                <artifactId>mms-usercenter-bc-feign-api</artifactId>
                <version>${project.version}</version>
            </dependency>

        </dependencies>
